#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + r
	bspc wm -r

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
# super + g
# 	bspc monitor --swap

# rotate layout
super + r
	bspc node @/ -R 90

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,apostrophe}
	bspc node -g {marked,locked,sticky,hidden}

#
# focus/swap
#

# focus desktop/send node to desktop the given direction
super + {_,shift + }{h,l}
	bspc {desktop -f, node -d} {prev,next}.local --follow

# send node to monitor
super + shift + {k,j}
	bspc node -m {north,south} --follow

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {k,j}
	bspc node -f {next,prev}.!hidden.window.local

super + c
	bspc node -f last.!hidden.window.local

# focus the last node/desktop
super + {z,n}
	bspc {monitor -f last,desktop -f last.local}

# send node to last monitor
super + shift + z
	bspc node -m last --follow

# focus the older or newer node in the focus history
super + bracket{left,right}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -f {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# hide current window
super + x
    stack_file="$XDG_RUNTIME_DIR/bspwm_hidden_nodes.txt"; \
    target_node=$(bspc query -N -n focused);              \
    [ -n "$target_node" ] && echo "$target_node" >>  "$stack_file";                \
    bspc node "$target_node" --flag hidden=on

# unhide the most recently hidden window
super + v
	stack_file="$XDG_RUNTIME_DIR/bspwm_hidden_nodes.txt"; \
	target_node=$(tail --lines=1 "$stack_file");          \
	sed -i '$d' "$stack_file";                            \
	bspc node "$target_node" --to-desktop focused;        \
	bspc node "$target_node" --flag hidden=off;           \
	bspc node -f "$target_node"

#
# Media Keys
#

#Screenshot
Print
	maim $HOME/pics/SC/pic-full-$(date '+%y%m%d-%H%M-%S').png

#Pick screenshot type

super + shift + s
	maimpick

#Volume Control
XF86AudioLowerVolume
	amixer set Master 1%-
XF86AudioRaiseVolume
	amixer set Master 1%+; amixer -D pulse set Master unmute
XF86AudioMute
	amixer -D pulse set Master 1+ toggle

#Brightness control
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
	xbacklight -inc 5

#Audio control
super + i
	mpc volume -3

super + o
	mpc volume +3

XF86AudioPlay
	mpc toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

super + shift + comma
	mpc prev

super + shift + period
	mpc next

