#!/bin/bash
success=$1
shift
input=$@
text="${input:=Terminou o birinaites}"

if [[ $success = "0" ]]; then
	urgency=low
	icon=info
else
	urgency=critical
	icon=error
fi

export XDG_RUNTIME_DIR="/run/user/1000"
export DISPLAY=:0
notify-send --urgency=$urgency -i $icon "$text" 2>&1
aplay /usr/share/sounds/sound-icons/electric-piano-3.wav 2>/dev/null
sleep 1
spd-say -l pt-br -t female3 "$text" 2>&1
