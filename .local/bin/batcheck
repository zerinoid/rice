#!/bin/bash

BATTINFO=$(acpi -b)
if [[ "$(echo $BATTINFO | grep Discharging)" && "$(echo $BATTINFO | cut -f 5 -d " ")" < 00:05:00 ]]; then

    export DISPLAY=:0
    notify-send -u critical "P-R-E-R-I-G-O" "$BATTINFO"

elif [[ "$(echo $BATTINFO | grep Discharging)" && "$(echo $BATTINFO | cut -f 5 -d " ")" < 00:15:00 ]] ; then

    # if [ -r "$HOME/.dbus/Xdbus" ]; then
    #   . "$HOME/.dbus/Xdbus"
    # fi

    export DISPLAY=:0
    notify-send "ta ruim hein? vai acabar" "$BATTINFO"

fi
