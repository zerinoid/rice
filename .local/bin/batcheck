#!/bin/bash

BATTINFO=$(acpi -b)
if [[ "$(echo $BATTINFO | grep Discharging)" && "$(echo $BATTINFO | cut -f 5 -d " ")" < 00:15:00 ]]; then

	export DISPLAY=:0
	notify-send -u critical -i notification-battery-empty "$(echo -e "P-R-E-R-I-G-O \n \n$BATTINFO")"

elif [[ "$(echo $BATTINFO | grep Discharging)" && "$(echo $BATTINFO | cut -f 5 -d " ")" < 00:30:00 ]]; then

	# if [ -r "$HOME/.dbus/Xdbus" ]; then
	#   . "$HOME/.dbus/Xdbus"
	# fi

	export DISPLAY=:0
	notify-send -i notification-battery-low "$(echo -e "Ta ruim hein? Vai acabar!!! \n \n$BATTINFO")"

fi
